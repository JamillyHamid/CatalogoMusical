<div class="p-4 shadow-sm rounded bg-dark text-light">
    <!-- Título centralizado -->
    <h1 class="text-center text-light mb-4">{{disco.titulo}}</h1>

    <div class="row">
        <!-- Coluna com a imagem do disco -->
        <div class="col-md-6">
            <img src="/uploads/{{disco.capa}}" class="img-fluid rounded shadow-sm border border-secondary"
                alt="{{disco.titulo}}">
        </div>

        <!-- Coluna com os detalhes do disco -->
        <div class="col-md-6">
            <p><strong>Ano de Lançamento:</strong> {{disco.anoLancamento}}</p>
            <p>
                <strong>Gênero:</strong>
                <span class="badge bg-danger">{{disco.generoMusical}}</span>
            </p>
            <hr class="border-secondary">
            <h6 class="text-danger">Artista:</h6>
            <p>{{disco.nomeArtista}}</p>
            <hr class="border-secondary">
            <h6 class="text-danger">Faixas:</h6>
            <ul class="list-group">
                <li class="list-group-item bg-dark text-light">
                    <strong>{{disco.faixaNome}}</strong>
                    <span class="text-muted">({{disco.faixaDuracao}})</span>
                    <audio controls class="w-100 mt-2">
                        <source src="/uploads/{{disco.faixaAudio}}" type="audio/mpeg">
                        Seu navegador não suporta o player de áudio.
                    </audio>
                </li>
            </ul>
            <hr class="border-secondary">

            <div class="d-flex gap-2">
                <a href="/discos/editarDiscos/{{disco.discoId}}" class="btn btn-warning">Editar</a>
                <form action="/discos/excluirDiscos/{{disco.discoId}}" method="POST"
                    onsubmit="return confirm('Tem certeza que deseja excluir este disco?');">
                    <button type="submit" class="btn btn-danger">Excluir</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-center mt-4">
    <a href="/" class="btn btn-danger">Home</a>
</div>

<!-- Estilos CSS -->
<style>
    body {
        background-color: #000;
        color: #fff;
    }

    h1 {
        color: #fff;
    }

    img {
        max-height: 400px;
        object-fit: cover;
    }

    .badge {
        font-size: 1rem;
    }

    .list-group-item {
        background-color: #222;
        border: 1px solid #333;
        transition: all 0.3s;
    }

    .list-group-item:hover {
        background-color: #333;
        border-color: #dc3545;
        color: #dc3545;
    }

    .btn-warning {
        background-color: #ffc107;
        color: #000;
        border: none;
    }

    .btn-warning:hover {
        background-color: #e0a800;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

    .btn-danger:hover {
        background-color: #b52b38;
    }

    hr {
        border-color: #555;
    }
</style>