<div class="container mt-4">
    <!-- Título centralizado -->
    <h1 class="text-center text-light mb-4">Lista de Artistas</h1>

    {{#if artistas.length}}
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {{#each artistas}}
        <div class="col">
            <div class="card h-100 shadow-sm bg-dark text-light border-0">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-danger">{{this.nomeArtista}}</h5>
                    <p class="card-text">
                        <strong>Gênero:</strong> {{this.generoMusical}}
                    </p>
                    {{#if this.discos.length}}
                    <h6>Discos:</h6>

                    <ul class="list-group">
                        {{#each this.discos}}
                        <li class="list-group-item artist-item d-flex justify-content-between align-items-center">
                            <a href="/discos/{{this.discoId}}" class="text-decoration-none text-light">
                                <strong>{{this.tituloDisco}}</strong>
                                <small class="text-muted">({{this.anoLancamento}})</small>
                            </a>
                        </li>
                        {{/each}}
                    </ul>
                    {{else}}
                    <p class="text-muted">Nenhum disco associado.</p>
                    {{/if}}
                    <div class="mt-3 d-flex justify-content-between">
                        <a href="/artistas/editarArtistas/{{this.artistaId}}" class="btn btn-warning btn-sm">Editar</a>
                        <form action="/artistas/excluirArtistas/{{this.artistaId}}" method="POST"
                            onsubmit="return confirm('Tem certeza que deseja excluir este Artista?');">
                            <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <div class="alert alert-warning text-center" role="alert">
        Nenhum artista encontrado.
    </div>
    {{/if}}

    <div class="d-flex justify-content-center mt-4">
        <a href="/" class="btn btn-danger">Home</a>
    </div>


</div>

<style>
    body {
        background-color: #000;
        color: #fff;
    }

    h1 {
        color: #fff;
    }

    /* Lista de artistas */
    .artist-list {
        max-height: 80vh;
        overflow-y: auto;
        border-right: 1px solid #555;
        padding-right: 15px;
        background-color: #222;
    }

    .artist-list h2 {
        font-size: 1.5rem;
        margin-bottom: 15px;
    }

    /* Itens da lista de artistas */
    .artist-item {
        cursor: pointer;
        background-color: #222;
        color: #fff;
        border: 1px solid #333;
        transition: all 0.3s;
    }

    .artist-item:hover {
        background-color: #333;
        /* Fundo cinza mais escuro */
        border-color: #dc3545;
        /* Borda vermelha */
        color: #dc3545;
        /* Texto vermelho */
    }

    .artist-item .badge {
        background-color: #dc3545;
        /* Destaque para a quantidade de discos */
    }

    .artist-item:hover .badge {
        background-color: #b52b38;
        /* Alteração no hover */
    }

    /* Itens da lista de artistas */
    .list-group-item {
        cursor: pointer;
        background-color: #222;
        color: #fff;
        border: 1px solid #333;
        transition: all 0.3s;
    }

    .list-group-item:hover {
        background-color: #333;
        border: 1px solid #dc3545;
        /* Destaque com borda vermelha */
        color: #dc3545;
        /* Texto em vermelho */
    }

    .text-muted {
        color: #fff !important;
    }

    .card {
        background-color: #222;
        color: #fff;
    }

    .card-title {
        color: #dc3545;
    }

    .list-group-item {
        background-color: #333;
        color: #fff;
    }

    .list-group-item .text-muted {
        color: #aaa !important;
    }

    .btn-warning {
        background-color: #ffc107;
        color: #000;
        border: none;
    }

    .btn-warning:hover {
        background-color: #e0a800;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

    .btn-danger:hover {
        background-color: #b52b38;
    }
</style>